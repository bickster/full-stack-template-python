# Application
APP_NAME=FullStackApp
DEBUG=0
TESTING=0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database
POSTGRES_DB=fullstack_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/fullstack_db

# API
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:80"]

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@example.com
SMTP_PASSWORD=your-smtp-password
EMAILS_FROM_EMAIL=notifications@example.com
EMAILS_FROM_NAME=FullStackApp

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Performance
MAX_WORKERS=4
CONNECTION_POOL_SIZE=20
CACHE_TTL=300

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
LOGIN_RATE_LIMIT_PER_MINUTE=5

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=1

# File Upload (optional)
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_EXTENSIONS=["pdf","doc","docx","txt","jpg","jpeg","png"]